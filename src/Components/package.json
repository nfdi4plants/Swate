{
  "name": "@nfdi4plants/swate-components",
  "version": "1.0.0",
  "description": "Customizable React components for ontology annotation, based on Swate and the ARC.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "dotnet fable watch ./src/Components.fsproj --define PUBLISH_COMPONENTS --lang ts --run vite",
    "fable": "dotnet fable ./src/Components.fsproj --define PUBLISH_COMPONENTS --lang ts --fableLib fable-library --noReflection",
    "build": "npm run fable && tsc --outDir ./dist --declaration --noEmit false && vite build",
    "test": "dotnet fable watch ./src/Components.fsproj --define PUBLISH_COMPONENTS --lang ts --run vitest",
    "pretest:run": "dotnet fable ./Components.fsproj --lang ts -e --noCache",
    "test:run": "vitest run"
  },

  "repository": {
    "type": "git",
    "url": "git+https://github.com/nfdi4plants/Swate.git"
  },
  "keywords": [
    "rdm",
    "ontology",
    "term",
    "react"
  ],
  "author": "Kevin Frey <freymaurer@gmx.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nfdi4plants/Swate/issues"
  },
  "homepage": "https://github.com/nfdi4plants/Swate#readme",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependenciesMeta": {
    "react": { "optional": true },
    "react-dom": { "optional": true }
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.6.3",
    "vite": "^5.0.5",
    "vite-plugin-node-polyfills": "^0.22.0",
    "@vitejs/plugin-react": "^4.2.1",
    "vitest": "^2.1.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/testing-library__react": "^10.0.1"
  }
}
